.calendar-dir
  .carousel
    .week(ng-repeat='week in weeks')
      .day(ng-repeat='day in week.days', ng-class='{selected:isSelected(day.day)}')
        .day-name {{day.day | date:'EEE, MMM d'}}
        .hours
          .hour(ng-repeat='hour in day.hours', tap='openTask({date:hour}, $event)')
            .legend {{hour | date:'shortTime'}}
          task(ng-repeat='task in day.tasks | filter:$root.selectedUser', style='top:{{task.top}}rem; height:calc({{task.height}}rem + 1px)', ng-click='openTask(task, $event)', class='{{task.status}}')
        .income {{income = calculateDailyIncome(day.day); ''}}
          .income-item
            label Income
            span {{income.amount | currency:'£'}}
          .income-item
            label Target
            span {{income.target | currency:'£'}}
          .income-item
            label +/-
            span(ng-class='{loss:income.profitloss<0}') {{income.profitloss | currency:'£'}}
          