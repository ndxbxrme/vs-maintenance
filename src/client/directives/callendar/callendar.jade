.callendar-dir
  .day(ng-repeat='day in days')
    .day-name {{day.day | date:'EEE, MMM d'}}
    .hours
      .hour(ng-repeat='hour in day.hours', ng-click='openTask({date:hour}, $event)')
        .legend {{hour | date:'shortTime'}}
      span.task(ng-repeat='task in day.tasks', style='top:{{task.top}}rem; height:calc({{task.height}}rem + 1px)', ng-click='openTask(task, $event)') 
        img(gravatar-src='"lewis_the_cat@hotmail.com"') 
        | {{task.title}}